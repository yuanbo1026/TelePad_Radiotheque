<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AppStockTransparentBlue" >

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/Grid_Item_genre"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="15dp" >

        <TextView
            android:id="@+id/tv_alert_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:lineSpacingMultiplier="1"
            android:text="@string/actionbar_not_playing_alert_text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp"
            android:textColor="@color/RadiothekWhite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:weightSum="1"
            android:layout_marginTop="5dp">

            
            <Button
                android:id="@+id/btn_alert_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:background="@drawable/station_list_item_bg_seletor"
                android:gravity="center"
                android:padding="5dp"
                android:focusable="true"
                android:text="@string/actionbar_not_playing_alert_dialog_ok"
                android:textColor="@drawable/general_text_color" />
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/alert_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

</RelativeLayout>